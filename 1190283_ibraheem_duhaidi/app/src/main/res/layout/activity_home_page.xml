<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED8989"
    tools:context=".home_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="40px"
                android:text="Enter UR Name"
                android:textAlignment="center"
                android:textSize="50px" />

            <EditText
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#73C356"
                android:ems="10"
                android:inputType="text"
                android:text="ur name plz"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/start_the_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60px"
            android:paddingBottom="70px"
            android:text="Start" />

        <LinearLayout
            android:id="@+id/view_score"
            android:layout_width="match_parent"
            android:layout_height="433dp"
            android:orientation="vertical"
            android:paddingTop="60px"></LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>